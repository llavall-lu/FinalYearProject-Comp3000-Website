generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // this is fetching the mongodb url from the .env file
}

model Blogs {
  id          String   @id @default(cuid()) @map("_id")
  title       String
  content   String?
  date        DateTime @default(now())
  userId    String
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  sender    String
  message   String
  createdAt DateTime @default(now())
}
